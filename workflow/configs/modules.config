// Result publishing paths
process {

    withName: 'FASTQC' {
        ext.args   = '--quiet'
        publishDir = [
            path: "${params.results}/01_FastQC_sequence_check",
            mode: params.publish_mode
        ]
    }
    withName: 'FASTP' {
        ext.args   = '-Q -L'
        publishDir = [
            path: "${params.results}/02_Fastp_trimmed_sequences",
            mode: params.publish_mode
        ]
    }
    withName: 'MULTIQC' {
        publishDir = [
            path: params.results,
            mode: params.publish_mode
        ]
    }
}
